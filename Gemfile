source 'https://rubygems.org'

gem 'rails', '4.0.0'

group :development do
  gem 'sqlite3'
end

group :production do
  gem 'pg'
end

gem 'haml'
gem 'jquery-rails'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier', '>= 1.0.3'
end

